[<%= @name %>]

source: <%= @source %>
target: <%= @target %>
<% if @include.instance_of?(Array) -%>
include: [
<%= @include.map { |e| "    '#{e}'" }.join(",\n") %>
    ]
<% else -%>
include: <%= @include %>
<% end -%>
<% if @exclude.instance_of?(Array) -%>
exclude: [
<%= @exclude.map { |e| "    '#{e}'" }.join(",\n") %>
    ]
<% else -%>
exclude: <%= @exclude %>
<% end -%>
